{
    "name": "your.repo.name",
    "version": "0.0.1",
    "description": "Your repo description",
    "scripts": {
        "setup": "gem install bundler jekyll && bundle install && npm install",
        "dev": "npm run css:raw && jekyll serve",
        "rel": "npm run css:clean",
        "css:raw": "postcss assets/tailwind.css -o assets/tailwind.generated.css",
        "css:clean": "postcss assets/tailwind.css -o assets/tailwind.generated.css --env production"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^2.1.0",
        "cssnano": "^4.1.10",
        "postcss": "^7.0.18",
        "postcss-cli": "^6.1.3"
    },
    "dependencies": {
        "tailwindcss": "^1.1.2"
    }
}