{
    "name": "your.repo.name",
    "version": "0.0.1",
    "description": "Your repo description",
    "scripts": {
        "setup": "gem install bundler && bundle install && npm i && npm i postcss-cli -g",
        "build": "jekyll build && npm run css:rel",
        "dev": "npm run css:dev && jekyll serve",
        "rel": "npm run css:rel",
        "css:dev": "postcss assets/tailwind.config.css -o _site/assets/tailwind.css",
        "css:rel": "npm run css:dev -- --env production"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^2.1.0",
        "cssnano": "^4.1.10",
        "postcss": "^7.0.27",
        "postcss-cli": "^7.1.0"
    },
    "dependencies": {
        "tailwindcss": "^1.2.0"
    }
}